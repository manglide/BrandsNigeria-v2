{{ template "header.tmpl" .}}
{{ $uL := .is_logged_in }}
{{ range .message }}
<meta property="og:type" content="website" />
<meta property="og:title" content="{{.Title}}" />
{{ if $uL }}
<meta property="og:url" content="https://brandsnigeria.com.ng/blog/s/{{.ID}}/{{.GUID}}" />
{{ else }}
<meta property="og:url" content="https://brandsnigeria.com.ng/blogs/{{.ID}}/{{.GUID}}" />
{{ end }}
<meta name="description" content="{{ substring .Content 0 30 }}" />
<meta property="og:description" content="{{ substring .Content 0 30 }}" />
<meta property="og:image" content="https://brandsnigeria.com.ng/{{.IMAGE}}" />
<meta property="og:locale" content="en_NG" />
<meta property="fb:app_id" content="491555231663023" />
<style>
.fa {
  padding: 20px;
  font-size: 30px;
  text-align: left;
  text-decoration: none;
}
.fa:hover {
    text-decoration: none;
}
div.c {
	padding: 13px;
	text-align: justify;
}
</style>
<div class="viewarea">
<div class="aboutContent">
  <div class="row">
    <div class="col-sm">
      	<a href="#" class="fa fa-facebook"></a>
		<a href="#" class="fa fa-twitter"></a>
		<a href="#" class="fa fa-linkedin"></a>
		<a href="#" class="fa fa-instagram"></a>
    </div>
  </div>
  <div class="c">
				<img class="img-fluid img-thumbnail" src="{{.IMAGE}}" />
				<h2>{{.Title}}</h2>
			    <p>{{.Content}}</p>
  </div>
</div>
</div>
{{ end }}
{{ template "footer.tmpl" .}}