{{ template "header.tmpl" .}}
<div class="viewarea">
  {{ $count := count .message }}
  {{ if equalNoAdd $count 0}}
	  	<h2>No Articles Found</h2>
  {{ else }}
		{{ if .is_logged_in }}
			{{ range .message }}
				<a href="/blog/s/{{.GUID}}">{{.Title}}</a>
			    <p>{{.Content}}</p>
		    {{ end }}
		{{ else }}
			{{ range .message }}
				<a href="/blog/{{.GUID}}">{{.Title}}</a>
			    <p>{{.Content}}</p>
		    {{ end }}
		{{ end }}
  {{ end }}
</div>
{{ template "footer.tmpl" .}}